                </div>

                <div class="tab-pane fade" id="contacto">
                    <p>Aca va la info del propetario mas form de contacto  </p>
                </div>
            </div>



        </div>
    </div>
</div>

<div class="row">


    <div class="panel-info col-lg-12">
        <div class="panel-heading"><b>Galeria</b>
        </div>

        <div class="panel-body">

            <div id="main_area">
                <!-- Slider -->
                <div class="row">
                    <div class="col-sm-6 " id="slider-thumbs">
                        <!-- Bottom switcher of slider -->
                        <ul class="hide-bullets hidden-xs">
                            @foreach (Proyecto.Models.Image img in ViewBag.imageList)
                            {
                                if (ViewBag.imageList[0].Id == img.Id)
                                {
                                    i=1;
                                    <li class="col-sm-4">
                                        <a class="thumbnail" id="carousel-selector-0"><img src="~/Images/@img.ImagenUrl" class="imagenes"></a>
                                    </li>
                                }
                                else
                                {
                                    <li class="col-sm-4">
                                        <a class="thumbnail" id="carousel-selector-@i"><img src="~/Images/@img.ImagenUrl" class="imagenes"></a>
                                    </li>
                                    i++;
                                }
                            }
                        </ul>
                    </div>
                    <div class="col-sm-6">
                        <div class="col-xs-12" id="slider">
                            <!-- Top part of the slider -->
                            <div class="row">
                                <div class="col-sm-12" id="carousel-bounding-box">
                                    <div class="carousel slide" id="myCarousel">
                                        <!-- Carousel items -->
                                        <div class="carousel-inner">
                                            
                                            @foreach (Proyecto.Models.Image img in ViewBag.imageList)
                                            {
                                                if (ViewBag.imageList[0].Id == img.Id)
                                                {
                                                    i=1;
                                                    <div class="active item" data-slide-number="0">
                                                        <img src="~/Images/@img.ImagenUrl" class="imagenActual" >
                                                    </div>
                                                }
                                                else
                                                {
                                                    <div class="item" data-slide-number="@i">
                                                        <img src="~/Images/@img.ImagenUrl" class="imagenActual" >
                                                    </div>
                                                    i++;
                                                }
                                            }
                                        </div>
                                        <!-- Carousel nav -->
                                        <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                            <span class="glyphicon glyphicon-chevron-left"></span>
                                        </a>
                                        <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                            <span class="glyphicon glyphicon-chevron-right"></span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <!--/Slider-->
            </div>
        </div><!-- aca cierrra el panel body-->

    </div><!--aca cierra el panel-->

</div>




<div class="row">
    <div class="panel panel-info col-lg-12 col-xs-12">
        <div class="panel-heading"><b>Ubicacion</b></div>
        
        <div class="row">
            <div class="col-lg-12">
                <div name="" style="min-width: 100px; height: 500px; margin: 0;padding: 0;" id="map-canvas"></div>               
                
            </div>

            <div class="col-lg-1 hidden">
                <div class="form-group">
                    @Html.LabelFor(model => model.Latitud, "Latitud y Longitud:", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.Latitud, new { htmlAttributes = new { @class = "form-control", @disabled = "disabled", @id = "lat" } })

                        <input class="form-control text-box single-line" disabled="disabled" id="lng" name="Longitud" type="text" value="@Model.Longitud">
                    </div>
                </div>
            </div>


        </div>
        


    </div>

</div>


<div class="row">
    <div class="panel panel-info col-lg-12">
        <div class="panel-heading"><b>Contacto</b></div>
        <div class="panel-body">
            
                
                <form class="form-horizontal">


                    <div class="form-group">
                        <label for="inputNombre" class="col-lg-2 control-label">Nombre y Apellido</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="inputNombre" placeholder="Nombre">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="inputTel" class="col-lg-2 control-label">Telefono</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="inputTel" placeholder="Telefono">
                        </div>
                    </div>


                    <div class="form-group">
                        <label for="inputEmail" class="col-lg-2 control-label">Email</label>
                        <div class="col-lg-10">
                            <input type="text" class="form-control" id="inputEmail" placeholder="Email">
                        </div>
                    </div>

                    <div class="form-group">
                        <label for=" textarea" class="col-lg-2 control-label">Mensaje</label>
                        <div class="col-lg-10">
                            <textarea class="form-control" rows="3" id="textArea"></textarea>
                          
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="reset" class="btn btn-default">Cancel</button>
                            <button type="submit" class="btn btn-primary">Submit</button>
                        </div>
                    </div>
                </form>
           

        </div>
    </div>
</div>

