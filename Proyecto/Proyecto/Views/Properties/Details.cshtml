    ViewBag.Title = "Details";
}

<h2>Details</h2>

<div>
    <h4>Propiedad</h4>
    <hr />
    
</div>
<p>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    @Html.ActionLink("Back to List", "Index")
</p>


    <!-- galeria ,detalles de la propiedad descripcion mapar de ubicacion contacto al dueño-->
    <div class="container well">
        <div class="row">
            <div class="panel panel-info col-lg-8">
                <div class="panel-heading"><b>Instalaciones y Servicios</b></div>
                <div class="panel-body">
                    <ul class="nav nav-tabs">
                        <li class="active"><a href="#home" data-toggle="tab" aria-expanded="false">Detalles</a></li>
                        <li><a href="#tarifas" data-toggle="tab" aria-expanded="true">Tarifas</a></li>
                        <li><a href="#caracteristicas" data-toggle="tab" aria-expanded="true">Caracteristicas</a></li>
                        <li><a href="#contacto" data-toggle="tab" aria-expanded="true">Info de Contacto</a></li>

                    </ul>
                    <div id="myTabContent" class="tab-content">
                        <div class="tab-pane fade active in" id="home">
                            <p>
                                Propiedad Ubicada en la localidad de @Html.DisplayNameFor(model => model.Locality.Nombre).<hr />
                                nombre -@Html.DisplayFor(model => model.Category.Nombre) - tipo: @Html.DisplayFor(model => model.PropertyType.Nombre) <hr />
                                titulo: @Html.DisplayFor(model => model.Titulo) - descripcion: @Html.DisplayFor(model => model.Descripcion) <hr />
                                direccion: @Html.DisplayFor(model => model.Direccion) - ambientes: @Html.DisplayFor(model => model.Ambientes) <hr />
                                baños: @Html.DisplayFor(model => model.Baños) - cochera: @Html.DisplayFor(model => model.Cochera)  <hr />
                                gas: @Html.DisplayFor(model => model.GasNatural)


                            </p>
                        </div>
                        <div class="tab-pane fade" id="tarifas">
                            <p>Una Tabla con Tarifas </p>
                        </div>
                        <div class="tab-pane fade" id="caracteristicas">
                            <p>
                                @Html.DisplayNameFor(model => model.User.Nombre)

                                @Html.DisplayFor(model => model.User.Nombre)

                                @Html.DisplayNameFor(model => model.Latitud)

                                @Html.DisplayFor(model => model.Latitud)

                                @Html.DisplayNameFor(model => model.Longitud)

                                @Html.DisplayFor(model => model.Longitud)

                                @Html.DisplayNameFor(model => model.Amoblado)

                                @Html.DisplayFor(model => model.Amoblado)

                                @Html.DisplayNameFor(model => model.AireAcond)

                                @Html.DisplayFor(model => model.AireAcond)

                                @Html.DisplayNameFor(model => model.Niños)

                                @Html.DisplayFor(model => model.Niños)

                                @Html.DisplayNameFor(model => model.Mascotas)

                                @Html.DisplayFor(model => model.Mascotas)

                                @Html.DisplayNameFor(model => model.MtsCuadrados)

                                @Html.DisplayFor(model => model.MtsCuadrados)

                                @Html.DisplayNameFor(model => model.Precio)

                                @Html.DisplayFor(model => model.Precio)

                                @Html.DisplayNameFor(model => model.Estado)

                                @Html.DisplayFor(model => model.Estado)

                                @Html.DisplayNameFor(model => model.TiempoRestante)

                                @Html.DisplayFor(model => model.TiempoRestante)

                                @Html.DisplayNameFor(model => model.FechaPublicacion)

                                @Html.DisplayFor(model => model.FechaPublicacion)
                            </p>
                        </div>

                        <div class="tab-pane fade" id="contacto">
                            <p>Aca va la info del propetario mas form de contacto  </p>
                        </div>
                    </div>



                </div>
