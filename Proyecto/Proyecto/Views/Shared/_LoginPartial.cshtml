@using Microsoft.AspNet.Identity
@using Proyecto.Helpers

@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav navbar-nav navbar-right">
            <li style="color: #fff;padding-top: 16px;padding-right: 10px;">@("Hola " + User.Identity.GetUser().Name + "!")</li>
            <li class="dropdown">
                
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="true">
                    <i class="glyphicon glyphicon-user"></i> Perfil 
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu">
                    <li class="dropdown-header">Propiedades</li>
                    <li><a href="/Properties/Index">Mis Propiedades</a></li>
                    <li><a href="#">Mis Estadisticas</a></li>
                    <li role="separator" class="divider"></li>
                    <li class="dropdown-header">Datos Personales</li>
                    <li><a href="/Manage/ChangePassword">Cambiar Contraseña</a></li>
                    <li>

                        @Html.ActionLink("General", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
                    </li>
                </ul>
            </li>


            <li>
                <a href="/Account/LogOff">Cerrar sesión</a>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Iniciar sesión", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
