@model PagedList.IPagedList<Proyecto.Models.Property>
@using PagedList.Mvc;

@foreach (Proyecto.Models.Property p in Model)
{
    <div class="col-lg-4 " style="padding-top: 20px; ">

        <div class="panel panel-info ">
            <div class="panel-heading">
                <h3 class="panel-title">@p.Titulo</h3>
            </div>

            <div class="panel-body panRow">
                <div class="col-lg-12"><img class="img-responsive" alt="" src="http://placehold.it/300x200" /></div>
                <div class="col-lg-12">
                    @p.Descripcion
                    @Html.ActionLink("Details", "/../Properties/Details", new { id = p.Id })
                </div>
            </div>
            <div class="panel-footer" style="text-align: right;font-size: small;">@p.FechaPublicacion.ToShortDateString()</div>
        </div>

    </div>
}