@model Proyecto.Models.Image

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm("Edit", "Images", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Image</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.ImagenUrl)
        @Html.HiddenFor(model => model.PropertyId)


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <img src="/Images/@Model.ImagenUrl" class="img-responsive" id="img0" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="file" id="uploadfile1" name="uploadfile1" accept="image/x-png, image/gif, image/jpeg" onchange="$('#img0')[0].src = window.URL.createObjectURL(this.files[0])" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
